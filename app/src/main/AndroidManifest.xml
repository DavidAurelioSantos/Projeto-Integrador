        <activity
            android:name=".ActivityListOrcamento"
            android:label="@string/title_list_orcamento"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".ActivityListClientes"
