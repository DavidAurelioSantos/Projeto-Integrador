        </activity>
        <activity
            android:name=".ActivityPrincipal"
            android:label="@string/title_activity_principal"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ActivityOrcamento"
            android:label="@string/title_orcamento"
